<%= render 'shared/edit_food_partner' %>

<div class="tab-content">
  <div class="tab-pane tabbed-panel active">
    <div class="col-xs-12">
      <h3>Menu Categories</h3>

      <table class="table table-striped tabled-condensed-xs">
        <thead>
          <tr>
            <th width="100">Sort Order</th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @menu_categories.each do |category| %>
            <tr>
              <td><%= category.sort_order %></td>
              <td><%= link_to category.name, edit_menu_category_path(@food_partner, category) %></td>
              <td>
                <%= button_to "Delete", menu_category_path(@food_partner, category), method: :delete, class: 'js-delete-item btn btn-danger btn-inline', data: { category_id: category.id, confirm: "Are you sure you want to delete this menu category? This can't be undone." } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= link_to "New Menu Category +", new_menu_category_path(@food_partner), class: 'btn btn-success' %>
      <br />

    </div>
  </div>
</div>
