              <li><%= link_to "FAQs", faqs_path %></li>

              <li><%= link_to "Blog", "http://blog.youchews.com/" %></li>

              <li><%= link_to "Terms of Service", terms_of_service_path %></li>
              <li><%= link_to "Terms of Use", terms_path %></li>
              <li><%= link_to "Privacy", privacy_path %></li>
              <li><%= link_to "Contact", contact_us_path %></li>
            </ul>
          </nav>
        </div>

        <div class="footer__lower-content">

          <div class="footer__social-links">
            <%= render 'shared/social_links' %>
          </div>
          <p>&copy; <%= Date.today.year %> Caitre’d | <%= link_to "atyourservice@caitre-d.com", "mailto:atyourservice@caitre-d.com" %></p>
        </div>

      </div>
    </div>
  </div>
</footer>
