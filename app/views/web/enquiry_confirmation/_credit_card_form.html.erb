<div class="form-group">
  <div class="col-sm-12">
    <h3 class="col-sm-12">Credit Card Details</h3>
    <p class="col-sm-12">Fields marked with an asterisk (*) are required.</p>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">
    Credit Card Number *
  </label>
  <div class="col-sm-9">
    <input class="form-control" id="js-pin-cc-number" type="text"></input>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">
    Name on Card *
  </label>
  <div class="col-sm-9">
    <input class="form-control" id="js-pin-cc-name" type="text"></input>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">
    Expiry *
  </label>
  <div class="col-sm-2">
    <select class="form-control" id="js-pin-cc-expiry-month">
      <% ("01".."12").each do |number| %>
        <option>
          <%= number %>
        </option>
      <% end %>
    </select>
  </div>
  <div class="col-sm-2">
    <select class="form-control" id="js-pin-cc-expiry-year">
      <% (Time.now.year..Time.now.year + 5).each do |year| %>
        <option>
          <%= year %>
        </option>
      <% end %>
    </select>
  </div>
  <label class="col-sm-2 control-label">
    CVC *
  </label>
  <div class="col-sm-3">
    <input class="form-control" id="js-pin-cc-cvc" type="text"></input>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-12">
    <h3 class="col-sm-12">Billing Address</h3>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">
    Address *
  </label>
  <div class="col-sm-9">
    <input class="form-control" id="js-pin-address-line1" type="text"></input>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-9 col-sm-offset-3">
    <input class="form-control" id="js-pin-address-line2" type="text"></input>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">
    City *
  </label>
  <div class="col-sm-9">
    <input class="form-control" id="js-pin-address-city" type="text"></input>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">
    State
  </label>
  <div class="col-sm-9">
    <input class="form-control" id="js-pin-address-state" type="text"></input>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">
    Postcode
  </label>
  <div class="col-sm-9">
    <input class="form-control" id="js-pin-address-postcode" type="text"></input>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label">
    Country *
  </label>
  <div class="col-sm-9">
    <input class="form-control" id="js-pin-address-country" type="text"></input>
  </div>
</div>
