<% content_for :title do %>
  Log In -
<% end %>

<% content_for :header do %>
  <header class="nav--fixed nav--dark">
    <%= render "shared/navigation" %>
  </header>
  <%= bordered_header_text "Sign in" %>
<% end %>

<section class="sessions">
      <% if flash[:error] %>
        <div class="<%= flash_class(:error) %>">
          Login failed, please try again. If you have forgotten your password, please&nbsp;
          <a href="<%= new_password_reset_path %>">use this link to reset it</a>
          \.
        </div>
      <% end %>

      <%= form_for @customer_session, url: customer_login_path do |form| %>
        <div class="form-group">
          <label> Email address </label>
          <%= form.text_field :email,  class: 'form-control input', id: 'js-email' %>
        </div>
        <div class="form-group">
          <label>
            Password
          </label>
          <%= form.password_field :password,  class: 'form-control input', id: 'js-password' %>
          <div>
            If you have forgotten your password, please
            <a href="<%= new_password_reset_path %>" id="js-reset-password">use this link to reset it</a>
            .
          </div>
        </div>
        <div class="form-group">
          <label>
            <%= form.check_box :remember_me, checked: true %>
            &nbsp;Remember me?
          </label>
        </div>
        <div class="form-group">
          <%= submit_tag "Sign in" %>
          <br/>
          <div>
            <br/>
            Not yet a user ?
            <%= link_to 'Register', register_path %>
          </div>
        </div>
      <% end %>

</div>
