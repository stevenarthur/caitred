<% content_for(:title){ "Create a Caitre'd Account" } %>
<% content_for(:meta_description){ "Create an account for quicker ordering, access to catering discounts & foodie news" } %>

<% content_for :header do %>
  <header class="nav--fixed nav--dark">
    <%= render "shared/navigation" %>
  </header>
  <%= bordered_header_text "Join Our Community", "registration" %>
<% end %>

<div class="content">
  <div class="row content--header">
    <div class="col-md-8 col-md-offset-2">
      <h2>Create a Caitre'd Account</h2>
      <p>Create an account to save your details for an easier and quicker ordering process!</p>
      <p>Get access to special discounts and fun foodie news.</p>
      <% if flash[:error] %>
        <div class="<%= flash_class(:error) %>">
          It looks like you've already registered with us. If you have forgotten your password, please&nbsp;
          <a href="<%= new_password_reset_path %>">> use this link to reset it</a>
          \.
        </div>
      <% end %>
    </div>
  </div>
  <div class="row content--body">
    <div class="col-md-6 col-md-offset-3">
      <%= simple_form_for(@customer, url: create_registration_path) do |f|  %>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :first_name %>
          </div>
          <div class="col-md-6">
            <%= f.input :last_name %>
          </div>
        </div>
        <%= f.input :company_name, required: true %>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :email %>
          </div>
          <div class="col-md-6">
            <%= f.input :telephone, required: true %>
          </div>
        </div>
        <%= f.input :password, required: true %>
        <%= f.submit "Create Account", class: 'shadow-button shadow-button--centered shadow-button--small shadow-button--green' %>
      <% end %>
    </div>
  </div>
</div>
